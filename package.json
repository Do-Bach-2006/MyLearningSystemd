{
  "name": "MyLearningSystemd",
  "productName": "MyLearningSystemd",
  "description": "A simple project to manage my learning process",
  "keywords": [],
  "main": "./main.js",
  "version": "0.1.2",
  "author": "gnomeright",
  "scripts": {
    "start": "electron32 .",
    "build": "electron-builder"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "delta-markdown-for-quill": "^0.0.9",
    "fs-extra": "^11.2.0",
    "quill": "^2.0.2",
    "quill-delta-to-markdown": "^0.6.0",
    "standsit-timer": "^3.1.0",
    "timer-for-pomodoro": "^1.0.2",
    "translate-google": "^1.5.0"
  },
  "devDependencies": {
    "electron": "31.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.yourname.yourapp",
    "productName": "MyLearningSystemd",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!*.log",
      "!*.tmp",
      "!*.vscode/",
      "!*.gitignore",
      "!*.git/"
    ],
    "downloadAlternateFFmpeg": true,
    "asar": {
      "smartUnpack": true
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
